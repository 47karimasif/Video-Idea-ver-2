{{>header}}

<div class="row">
{{#each ideas}}
   <div class="col-md-4">
<div class="card card-body mb-3">
  <h4 class="text-center" >{{title}}</h4>
  <p class="text-center">{{details}}</p>
  <a class="btn btn-dark btn-block mb-2 "  href="/video-idea/v1/ideas/edit/{{id}}">Edit</a>
  <form method="post" action="/video-idea/v1/ideas/delete/{{id}}?_method=DELETE">
    <input  type="submit" class="btn btn-danger btn-block " value="Delete">
  </form>
</div>
</div>


{{else}}
<p>No video ideas Listed</p>
{{/each}}
</div>

{{>footer}}
